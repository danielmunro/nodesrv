{
  "name": "nodesrv",
  "version": "0.0.1",
  "description": "A minimal server",
  "main": "bin/start-game-server.js",
  "scripts": {
    "start": "ts-node --no-cache bin/start-game-server.ts",
    "create-fixtures": "ts-node --no-cache bin/create-fixtures.ts .",
    "clean": "rm -rf ./coverage",
    "lint": "yarn clean && tslint --project .",
    "test": "ENV=test jest --forceExit --detectOpenHandles -i",
    "reset-test-db": "ts-node bin/reset-test-db.ts",
    "test-coverage": "yarn test --coverage",
    "complexity": "ts-complexity --max-complexity 14 src/**/*",
    "practice-debug": "ts-node bin/practice-debug.ts",
    "specialization-level-audit": "ts-node bin/specialization-level-audit.ts"
  },
  "repository": "https://github.com/danielmunro/nodesrv",
  "keywords": [],
  "author": "Dan Munro",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/core-js": "^0.9.35",
    "@types/jest": "^23.3.1",
    "adjective-adjective-animal": "^1.3.3",
    "jest": "^23.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "minimist": "^1.2.0",
    "mock-socket": "^7.1.0",
    "sillyname": "^0.1.0",
    "slugify": "^1.2.9",
    "ts-complexity": "^0.0.3",
    "ts-jest": "^23.1.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.0"
  },
  "dependencies": {
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.15",
    "@types/password-hash": "^1.2.20",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^6.0.1",
    "email-validator": "^2.0.3",
    "is-uuid": "^1.0.2",
    "json-stringify-safe": "^5.0.1",
    "password-hash": "^1.2.2",
    "pg": "^7.7.1",
    "typeorm": "^0.1.19",
    "typescript-string-operations": "^1.3.1",
    "ws": "^6.1.2"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/bin/**",
      "!**/fixture/**"
    ],
    "coveragePathIgnorePatterns": [
      "constants.ts",
      "dontExecuteTestObserver.ts",
      "src/timer"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportFile": "test-report.xml"
  }
}
