{
  "name": "nodesrv",
  "version": "0.0.1",
  "description": "A minimal server",
  "main": "bin/start-game-server.js",
  "scripts": {
    "start": "ts-node --max_old_space_size=8192 --no-cache bin/start-game-server.ts 3001 5151",
    "create-fixtures": "ts-node --no-cache bin/create-fixtures.ts .",
    "clean": "rm -rf ./coverage",
    "lint": "yarn clean && tslint --project .",
    "test": "ENV=test jest --forceExit --detectOpenHandles",
    "test-actions": "ENV=test jest --forceExit --detectOpenHandles action/impl",
    "test-most": "ENV=test jest --forceExit --detectOpenHandles --testPathIgnorePatterns import persist login/name",
    "test-rest": "ENV=test jest --forceExit --detectOpenHandles -i import persist login/name",
    "reset-test-db": "ts-node bin/reset-test-db.ts",
    "test-coverage": "yarn test --coverage",
    "complexity": "ts-complexity --max-complexity 10 --pattern 'src/**/!(*.test).ts' src/**/*",
    "practice-debug": "ts-node bin/practice-debug.ts",
    "specialization-level-audit": "ts-node bin/specialization-level-audit.ts",
    "cost-audit": "ts-node --max_old_space_size=8192 bin/cost-audit.ts",
    "container": "ts-node src/test.ts",
    "republish-players": "ts-node --max_old_space_size=8192 bin/kafka-republish-create-all-players.ts",
    "migration-run": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migration-generate": "ts-node ./node_modules/typeorm/cli.js migration:generate"
  },
  "repository": "https://github.com/danielmunro/nodesrv",
  "keywords": [],
  "author": "Dan Munro",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/core-js": "^0.9.35",
    "@types/jest": "^24.0.11",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/minimist": "^1.2.0",
    "@types/stripe": "^6.31.4",
    "@types/inversify": "^2.0.33",
    "@types/kafkajs": "^1.8.0",
    "@types/lodash": "^4.14.119",
    "@types/node": "^10.12.15",
    "@types/password-hash": "^1.2.20",
    "@types/reflect-metadata": "^0.1.0",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^6.0.1",
    "jest": "^23.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "minimist": "^1.2.0",
    "mock-socket": "^7.1.0",
    "sillyname": "^0.1.0",
    "slugify": "^1.2.9",
    "ts-complexity": "^0.0.3",
    "ts-jest": "^23.1.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.0"
  },
  "dependencies": {
    "email-validator": "^2.0.3",
    "inversify-inject-decorators": "^3.1.0",
    "is-uuid": "^1.0.2",
    "json-stringify-safe": "^5.0.1",
    "kafkajs": "^1.8.0",
    "lodash": "^4.17.13",
    "password-hash": "^1.2.2",
    "pg": "^7.7.1",
    "stripe": "^7.4.0",
    "typeorm": "^0.2",
    "typescript-string-operations": "^1.3.1",
    "ws": "^6.1.2"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/bin/**",
      "!**/fixture/**",
      "!**/migrations/**"
    ],
    "coveragePathIgnorePatterns": [
      "constants.ts",
      "dontExecuteTestObserver.ts",
      "support/timer"
    ],
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "jestSonar": {
    "reportFile": "test-report.xml"
  }
}
