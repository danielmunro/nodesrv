{
  "name": "nodesrv",
  "version": "0.0.1",
  "description": "A minimal server",
  "main": "bin/start-game-server.js",
  "scripts": {
    "start": "ts-node --no-cache bin/start-game-server.ts",
    "create-fixtures": "ts-node --no-cache bin/create-fixtures.ts .",
    "clean": "rm -rf ./coverage",
    "lint": "yarn clean && tslint --project .",
    "test": "ENV=test jest --forceExit --detectOpenHandles",
    "reset-test-db": "ts-node bin/reset-test-db.ts",
    "test-coverage": "ENV=test jest --coverage --forceExit --detectOpenHandles",
    "complexity": "ts-complexity --max-complexity 14 src/**/*"
  },
  "repository": "https://github.com/danielmunro/nodesrv",
  "keywords": [],
  "author": "Dan Munro",
  "license": "CC0-1.0",
  "devDependencies": {
    "@types/core-js": "^0.9.35",
    "@types/jest": "^23.3.1",
    "adjective-adjective-animal": "^1.3.3",
    "babel-cli": "^7.0.0-beta.3",
    "babel-node": "^7.0.0-beta.3",
    "babel-plugin-module-resolver": "^3.0.0",
    "babel-plugin-transform-class-properties": "^7.0.0-beta.3",
    "babel-polyfill": "^7.0.0-beta.3",
    "babel-preset-env": "^2.0.0-alpha.20",
    "babel-preset-es2015": "^7.0.0-beta.3",
    "babel-preset-stage-2": "^7.0.0-beta.3",
    "babel-preset-typescript": "^7.0.0-alpha.19",
    "fs": "^0.0.1-security",
    "jest": "^23.5.0",
    "mock-socket": "^7.1.0",
    "sillyname": "^0.1.0",
    "slugify": "^1.2.9",
    "ts-complexity": "^0.0.3",
    "ts-jest": "^23.1.4",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "tslint-sonarts": "^1.7.0",
    "typescript": "^2.6.2"
  },
  "dependencies": {
    "@types/node": "^9.4.0",
    "@types/password-hash": "^1.2.20",
    "@types/uuid": "^3.4.3",
    "@types/ws": "^4.0.0",
    "email-validator": "^2.0.3",
    "hoek": "^5.0.3",
    "is-uuid": "^1.0.2",
    "json-stringify-safe": "^5.0.1",
    "password-hash": "^1.2.2",
    "pg": "^7.4.1",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.1.19",
    "typescript-string-operations": "^1.3.1",
    "ws": "^4.0.0"
  },
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/bin/**",
      "!**/fixture/**"
    ],
    "coveragePathIgnorePatterns": [
      "constants.ts",
      "dontExecuteTestObserver.ts",
      "src/timer"
    ],
    "setupTestFrameworkScriptFile": "./bin/test-setup.ts"
  }
}
