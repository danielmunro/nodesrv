{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "semicolon": [true, "never"],
        "no-console": {
            "severity": "warning"
        },
        "no-empty": {
            "severity": "warning"
        },
        "interface-name": [true, "never-prefix"],
        "no-unused-variable": true
    }
}